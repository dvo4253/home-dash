{
	"extends": [
		"airbnb",
		"plugin:react/recommended"
	],
	"parser": "babel-eslint",
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"mocha": true,
		"jest": true
	},
	"plugins": [
		"react",
		"babel",
		"import"
	],
	"rules": {
		"import/extensions": 0,
		"import/prefer-default-export": 0,
		"indent": [
			2,
			"tab"
		],
		"no-tabs": 0,
		"react/jsx-indent": [
			2,
			"tab"
		],
		"react/jsx-filename-extension": 0,
		"react/jsx-one-expression-per-line": 0,
		"max-len": [2, 180]
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"ecmaFeatures": {
			"jsx": true
		}
	}
}
